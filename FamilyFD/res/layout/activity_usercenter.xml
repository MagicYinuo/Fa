<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appback"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_10dp"
        android:background="@color/statusbar_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_200dp"
        android:background="@color/statusbar_bg" >

        <ImageView
            android:id="@+id/usercenter_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:src="@drawable/p2_back" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usercenter_iv_headpic"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/usercenter_tv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:text="13800000000"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/dimen_15sp" />

            <TextView
                android:id="@+id/usercenter_tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/corners_bg_golden"
                android:gravity="center"
                android:padding="@dimen/dimen_5dp"
                android:text="LV 0"
                android:textColor="#E82F2F"
                android:textSize="@dimen/dimen_12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/usercenter_iv_headpic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usercenter_iv_back"
            android:layout_centerHorizontal="true"
            android:src="@drawable/p2_objects" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/usercenter_rl_zhanghaoshezhi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        android:background="#FFFFFF" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:gravity="center_vertical"
            android:text="账号设置"
            android:textSize="@dimen/dimen_12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:src="@drawable/p2_arrow_right" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:background="@color/appback" />

    <RelativeLayout
        android:id="@+id/usercenter_rl_noti"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        android:background="#FFFFFF" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:gravity="center_vertical"
            android:text="通知设置"
            android:textSize="@dimen/dimen_12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:src="@drawable/p2_arrow_right" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:background="@color/appback" />

    <RelativeLayout
        android:id="@+id/usercenter_rl_help"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        android:background="#FFFFFF" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:gravity="center_vertical"
            android:text="帮助中心"
            android:textSize="@dimen/dimen_12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:src="@drawable/p2_arrow_right" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:background="@color/appback" />

    <RelativeLayout
        android:id="@+id/usercenter_rl_about"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        android:background="#FFFFFF" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:gravity="center_vertical"
            android:text="关于软件"
            android:textSize="@dimen/dimen_12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:src="@drawable/p2_arrow_right" />
    </RelativeLayout>

</LinearLayout>