<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appback"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20dp"
        android:background="@color/statusbar_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        android:background="@color/statusbar_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/activity_houseplan_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:src="@drawable/p2_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="购房规划"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dimen_18sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_6dp"
        android:background="@color/appback" />

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30dp"
                android:background="#FFF" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:text="购房面积"
                    android:textSize="@dimen/dimen_10sp" />

                <EditText
                    android:id="@+id/activity_houseplan_et_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/activity_houseplan_tv_area"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="0"
                    android:inputType="numberDecimal"
                    android:textSize="@dimen/dimen_10sp" />
                
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平米"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:textSize="@dimen/dimen_10sp"
                    android:id="@+id/activity_houseplan_tv_area"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/appframe" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30dp"
                android:background="#FFF" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:text="目前年收入"
                    android:textSize="@dimen/dimen_10sp" />

                <EditText
                    android:id="@+id/activity_houseplan_et_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="right"
                    android:layout_toLeftOf="@+id/activity_houseplan_tv_income"
                    android:hint="0"
                    android:inputType="numberDecimal"
                    android:textSize="@dimen/dimen_10sp" />
                
                 <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="万元"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:textSize="@dimen/dimen_10sp"
                    android:id="@+id/activity_houseplan_tv_income"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/appframe" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30dp"
                android:background="#FFF" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:text="现有购房储备金"
                    android:textSize="@dimen/dimen_10sp" />

                <EditText
                    android:id="@+id/activity_houseplan_et_rest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:layout_toLeftOf="@+id/activity_houseplan_tv_rest"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="0"
                    android:inputType="numberDecimal"
                    android:textSize="@dimen/dimen_10sp" />
                
                  <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="万元"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:textSize="@dimen/dimen_10sp"
                    android:id="@+id/activity_houseplan_tv_rest"/>
                
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/appframe" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30dp"
                android:background="#FFF" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:text="拟定几年后买房"
                    android:textSize="@dimen/dimen_10sp" />

                <Spinner
                    android:id="@+id/activity_houseplan_sp_afteryears"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:background="@null"
                    android:entries="@array/house_afteryears"
                    android:gravity="right"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/appframe" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30dp"
                android:background="#FFF" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:text="贷款期限"
                    android:textSize="@dimen/dimen_10sp" />
                
                <Spinner
                    android:id="@+id/activity_houseplan_sp_loanyears"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:background="@null"
                    android:entries="@array/house_loanyears"
                    android:gravity="right"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/appframe" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30dp"
                android:background="#FFF" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:text="平均投资收益"
                    android:textSize="@dimen/dimen_10sp" />

                <TextView
                    android:id="@+id/activity_houseplan_tv_investincome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:gravity="right"
                    android:text="6%"
                    android:textSize="@dimen/dimen_10sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/appframe" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30dp"
                android:background="#FFF" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:text="平均购房储蓄率上限"
                    android:textSize="@dimen/dimen_10sp" />

                <TextView
                    android:id="@+id/activity_houseplan_tv_housesaving"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:gravity="right"
                    android:text="30%"
                    android:textSize="@dimen/dimen_10sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/appframe" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/appframe" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_6dp"
                android:background="@color/appback" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/appframe" />

            <TextView
                android:id="@+id/activity_houseplan_tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:paddingBottom="@dimen/dimen_10dp"
                android:paddingLeft="@dimen/dimen_20dp"
                android:paddingRight="@dimen/dimen_20dp"
                android:paddingTop="@dimen/dimen_10dp"
                android:text="房子是一个家庭基本需求，购房规划原本是财务安全规划重要内容，但由于最近中国大城市房价偏高，泡沫较大，理财规划师建议您根据自身承受能力理性考虑购房需求，下面是您的购房能力评估结果，不构成作为购房规划的依据："
                android:textSize="@dimen/dimen_11sp" >
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/appframe" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_6dp"
                android:background="@color/appback" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/appframe" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30dp"
                android:background="#FFF"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_weight="1"
                    android:text="购房首付"
                    android:textSize="@dimen/dimen_10sp" />

                <TextView
                    android:layout_width="@dimen/dimen_1dp"
                    android:layout_height="match_parent"
                    android:background="@color/appframe" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity_houseplan_tv_firstpay"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="0.0"
                    android:textSize="@dimen/dimen_10sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/appframe" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30dp"
                android:background="#FFF"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_weight="1"
                    android:text="可负担房屋贷款额"
                    android:textSize="@dimen/dimen_10sp" />

                <TextView
                    android:layout_width="@dimen/dimen_1dp"
                    android:layout_height="match_parent"
                    android:background="@color/appframe" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:layout_weight="1"
                    android:id="@+id/activity_houseplan_tv_canloan"
                    android:gravity="right"
                    android:text="0.0"
                    android:textSize="@dimen/dimen_10sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/appframe" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30dp"
                android:background="#FFF"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_weight="1"
                    android:text="可负担买房总价"
                    android:textSize="@dimen/dimen_10sp" />

                <TextView
                    android:layout_width="@dimen/dimen_1dp"
                    android:layout_height="match_parent"
                    android:background="@color/appframe" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:layout_weight="1"
                    android:id="@+id/activity_houseplan_tv_canpay"
                    android:gravity="right"
                    android:text="0.0"
                    android:textSize="@dimen/dimen_10sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/appframe" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30dp"
                android:background="#FFF"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_weight="1"
                    android:text="可负担买房单价"
                    android:textSize="@dimen/dimen_10sp" />

                <TextView
                    android:layout_width="@dimen/dimen_1dp"
                    android:layout_height="match_parent"
                    android:background="@color/appframe" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:id="@+id/activity_houseplan_tv_canpayper"
                    android:text="0.0"
                    android:textSize="@dimen/dimen_10sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/appframe" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30dp"
                android:background="#FFF"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_weight="1"
                    android:text="房屋贷款占总价成数"
                    android:textSize="@dimen/dimen_10sp" />

                <TextView
                    android:layout_width="@dimen/dimen_1dp"
                    android:layout_height="match_parent"
                    android:background="@color/appframe" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:id="@+id/activity_houseplan_tv_percent"
                    android:text="0.0"
                    android:textSize="@dimen/dimen_10sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/appframe" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30dp"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/dimen_20dp"
                android:text="备注 : 所有单位为元"
                android:textColor="@color/darkgrayhaha"
                android:textSize="@dimen/dimen_10sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_70dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>