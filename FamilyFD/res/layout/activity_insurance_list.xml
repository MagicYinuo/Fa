<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20dp"
        android:background="@color/statusbar_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        android:background="@color/statusbar_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/activity_insurancelist_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:src="@drawable/p2_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="选择产品"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dimen_18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_35dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/activity_insurancelist_rl_organization"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/activity_insurancelist_ll_organization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/activity_insurancelist_tv_organization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部机构"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/dimen_14sp" />

                <ImageView
                    android:id="@+id/activity_insurancelist_iv_organization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/dimen_3dp"
                    android:src="@drawable/selector_activity_creditcardlist_arrow" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="match_parent"
            android:background="@color/appback" />

        <RelativeLayout
            android:id="@+id/activity_insurancelist_rl_kind"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/activity_insurancelist_ll_kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/activity_insurancelist_tv_kind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保险类别"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/dimen_14sp" />

                <ImageView
                    android:id="@+id/activity_insurancelist_iv_kind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/dimen_3dp"
                    android:src="@drawable/selector_activity_creditcardlist_arrow" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/appback" />

    <com.example.familyfd.view.MyListView
        android:id="@+id/activity_insurancelist_lv_insurancelist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >
    </com.example.familyfd.view.MyListView>

</LinearLayout>