<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appback"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:text="热门货币类基金"
                    android:textSize="@dimen/dimen_12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/fragment2_finance_fund_tv_morehotfund"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:text="更多>>"
                    android:textSize="@dimen/dimen_12sp" />
            </RelativeLayout>

            <com.example.familyfd.view.MyListView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/fragment2_finance_fund_lv_hotfund"
                android:background="@color/white" >
            </com.example.familyfd.view.MyListView>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:text="股票类基金"
                    android:textSize="@dimen/dimen_12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/fragment2_finance_fund_tv_moresharesfund"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:text="更多>>"
                    android:textSize="@dimen/dimen_12sp" />
            </RelativeLayout>
            
             <com.example.familyfd.view.MyListView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/fragment2_finance_fund_lv_sharesfund"
                android:background="@color/white" >
            </com.example.familyfd.view.MyListView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>