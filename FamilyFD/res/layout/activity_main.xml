<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_allFlipper"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <!-- 启动等待界面 -->

    <!--<RelativeLayout-->
        <!--android:id="@+id/main_splashLayout"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen"-->
        <!--android:layout_height="fill_parent"-->
        <!--android:background="@drawable/hello1" >-->
    <!--</RelativeLayout>-->

    <!-- 主界面 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" >

        <LinearLayout
            android:id="@+id/main_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/index_tv_index"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/statusbar_bg"
                android:drawableTop="@drawable/index_home"
                android:gravity="center"
                android:paddingTop="@dimen/dimen_14dp"
                android:text="主页"
                android:textSize="@dimen/dimen_12sp" >
            </TextView>

            <TextView
                android:id="@+id/index_tv_study"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/index__study"
                android:gravity="center"
                android:paddingTop="@dimen/dimen_14dp"
                android:text="学习"
                android:textSize="@dimen/dimen_12sp" >
            </TextView>

            <TextView
                android:id="@+id/index_tv_money"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/index_money"
                android:gravity="center"
                android:paddingTop="@dimen/dimen_14dp"
                android:text="财富"
                android:textSize="@dimen/dimen_12sp" >
            </TextView>

            <TextView
                android:id="@+id/index_tv_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/index_activity"
                android:gravity="center"
                android:paddingTop="@dimen/dimen_14dp"
                android:text="活动"
                android:textSize="@dimen/dimen_12sp" >
            </TextView>

            <TextView
                android:id="@+id/index_tv_accounts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/index_notepad"
                android:gravity="center"
                android:paddingTop="@dimen/dimen_14dp"
                android:text="记账"
                android:textSize="@dimen/dimen_12sp" >
            </TextView>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/main_fl_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/main_ll" >
        </FrameLayout>
    </RelativeLayout>

</ViewFlipper>