<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20dp"
        android:background="@color/statusbar_bg"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        android:background="@color/statusbar_bg"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/activity_offline_order_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:src="@drawable/p2_back"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/corners_bg_whiteorange"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/activity_offline_order_tv_allorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/corners_bg_left_white"
                android:layout_gravity="center_vertical"
                android:text="全部机构"
                android:textColor="@color/statusbar_bg"
                android:paddingTop="@dimen/dimen_4dp"
                android:paddingBottom="@dimen/dimen_4dp"
                android:paddingLeft="@dimen/dimen_8dp"
                android:paddingRight="@dimen/dimen_8dp"
                android:textSize="@dimen/dimen_15sp" />

            <TextView
                android:id="@+id/activity_offline_order_tv_myorder"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dimen_4dp"
                android:paddingBottom="@dimen/dimen_4dp"
                android:paddingLeft="@dimen/dimen_8dp"
                android:paddingRight="@dimen/dimen_8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="我的预约"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_15sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/activity_offline_order_iv_pulldown"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dimen_5dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:src="@drawable/order_pull" />

        <TextView
            android:id="@+id/activity_offline_order_tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/activity_offline_order_iv_pulldown"
            android:padding="@dimen/dimen_3dp"
            android:text="深圳"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_12sp" >
        </TextView>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/activity_offline_order_fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

</LinearLayout>