            android:textColor="@color/black"
            android:textSize="@dimen/dimen_14sp" />

        <TextView
            android:id="@+id/fragmentstudy_tv_konwledge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="知识"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_14sp" />

        <TextView
            android:id="@+id/fragmentstudy_tv_information"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="资讯"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_14sp" />

        <TextView
            android:id="@+id/fragmentstudy_tv_class"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="课堂"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_14sp" />
    </LinearLayout>

