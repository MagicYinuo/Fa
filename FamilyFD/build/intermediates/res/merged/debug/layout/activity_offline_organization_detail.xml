<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
      <TextView android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20dp"
        android:background="@color/statusbar_bg"/>

  <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        android:background="@color/statusbar_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/activity_offline_organization_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:src="@drawable/p2_back" />

        <TextView
            android:id="@+id/activity_offline_organization_tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="平安机构"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dimen_18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/activity_offline_organization_rl_golden"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="@dimen/dimen_40dp"
                android:background="@color/appback" >

                <TextView
                    android:id="@+id/activity_offline_organization_tv_golden"
                    android:layout_width="@dimen/dimen_3dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:background="@color/organization_title_start" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@id/activity_offline_organization_tv_golden"
                    android:text="金牌理财规划师"
                    android:textSize="@dimen/dimen_12sp" />
            </RelativeLayout>

            <com.example.familyfd.view.MyListView
                android:id="@+id/activity_offline_organization_lv_golden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </com.example.familyfd.view.MyListView>

            <RelativeLayout
                android:id="@+id/activity_offline_organization_rl_high"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:gravity="center_vertical"
                android:background="@color/appback" >

                <TextView
                    android:id="@+id/activity_offline_organization_tv_high"
                     android:layout_width="@dimen/dimen_3dp"
                    android:layout_height="match_parent"
                   android:layout_marginBottom="@dimen/dimen_10dp"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:background="@color/organization_title_start" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_40dp"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_toRightOf="@id/activity_offline_organization_tv_high"
                    android:text="高级理财规划师"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/dimen_12sp" />
            </RelativeLayout>

            <com.example.familyfd.view.MyListView
                android:id="@+id/activity_offline_organization_lv_high"
                android:layout_width="match_parent"
                android:layout_marginBottom="60dp"
                android:layout_height="wrap_content" >
            </com.example.familyfd.view.MyListView>
            
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>