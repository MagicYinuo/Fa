<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20dp"
        android:background="@color/statusbar_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        android:background="@color/statusbar_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/activity_creditcard_detail_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:src="@drawable/p2_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="信用卡详情"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dimen_18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/appback"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/activity_creditcard_detail_ll_detail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_140dp"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_20dp"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp"
            android:paddingTop="@dimen/dimen_20dp" >

            <ImageView
                android:id="@+id/activity_creditcard_detail_iv_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/fragment_finance_bankcard_cz" />

            <LinearLayout
                android:id="@+id/activity_creditcard_detail_ll_titel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical" >

                <com.example.familyfd.utils.FlowGroupView
                    android:id="@+id/activity_creditcard_detail_fl_titel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5dp" >
                </com.example.familyfd.utils.FlowGroupView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/activity_creditcard_detail_tv_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20326"
                        android:textColor="@color/statusbar_bg"
                        android:textSize="@dimen/dimen_10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_5dp"
                        android:text="人已申请"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_10sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <WebView
            android:id="@+id/activity_creditcard_detail_wv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/activity_creditcard_detail_tv_applynow"
            android:layout_below="@+id/activity_creditcard_detail_ll_detail" />
        
        <TextView android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:text="立即申请"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_17sp"
            android:id="@+id/activity_creditcard_detail_tv_applynow"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:background="@drawable/corners_bg_nextbutton"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_50dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            />
        
        
    </RelativeLayout>

</LinearLayout>