<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appback"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#FFF"
        android:layout_height="@dimen/dimen_50dp">

        <ImageView
            android:id="@+id/fragmnet2_account_income_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/account_wages" >
        </ImageView>

        <TextView
            android:id="@+id/fragmnet2_account_income_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_13sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/fragmnet2_account_income_iv"
            android:text="默认类型" >
        </TextView>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:ems="10"
            android:gravity="right"
            android:id="@+id/fragmnet2_account_income_et"
            android:hint="0.00"
            android:textCursorDrawable="@null"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:inputType="numberDecimal"
            android:textSize="@dimen/dimen_13sp" />
    </RelativeLayout>

    <GridView
        android:id="@+id/fragmnet2_account_income_gv"
        android:layout_width="match_parent"
        android:numColumns="5"
        android:layout_height="match_parent" >
    </GridView>

</LinearLayout>