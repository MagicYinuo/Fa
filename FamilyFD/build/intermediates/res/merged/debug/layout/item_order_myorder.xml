<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/item_order_myorder_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_order_myorder_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/dimen_12sp"
            android:text="张三" />

        <TextView
            android:id="@+id/item_order_myorder_introduce"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:textSize="@dimen/dimen_10sp"
            android:layout_height="wrap_content"
            android:text="金牌理财规划师,从业15年,经验丰富" />

        <TextView
            android:id="@+id/item_order_myorder_time"
            android:textSize="@dimen/dimen_10sp"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dimen_2dp"
            android:layout_height="wrap_content"
            android:text="预约时间 : 2016-01-01" />
    </LinearLayout>

</LinearLayout>