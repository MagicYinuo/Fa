<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20dp"
        android:background="@color/statusbar_bg"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        android:background="@color/statusbar_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/activity_about_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:src="@drawable/p2_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/activity_About_title"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dimen_18sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_6dp"
        android:background="@color/appback" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/appback" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_100dp"
                android:background="#FFF" >

                <LinearLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">
                <ImageView
                    android:id="@+id/activity_about_iv_logo"
                    android:layout_width="@dimen/dimen_62dp"
                    android:layout_height="@dimen/dimen_62dp"
                    android:src="@drawable/logo_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity_about_tv_version"
                    android:layout_below="@id/activity_about_iv_logo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:gravity="center"
                    android:text="版本号:"
                    android:textSize="@dimen/dimen_13sp" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="#EDE6E6" />

            <RelativeLayout
                android:id="@+id/activity_about_rl_erweima"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_35dp"
                android:background="#FFFFFF" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:gravity="center"
                    android:text="二维码"
                    android:textSize="@dimen/dimen_12sp" />

                <ImageView
                    android:id="@+id/activity_about_iv_erweima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:src="@drawable/p2_arrow_right" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EDE6E6" />

            <RelativeLayout
                android:id="@+id/activity_about_rl_company"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_35dp"
                android:background="#FFFFFF" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:gravity="center"
                    android:text="公司介绍"
                    android:textSize="@dimen/dimen_12sp" />

                <ImageView
                    android:id="@+id/activity_about_iv_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:src="@drawable/p2_arrow_right" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EDE6E6" />

            <RelativeLayout
                android:id="@+id/activity_about_rl_checkupdate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_35dp"
                android:background="#FFFFFF" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:gravity="center"
                    android:text="检查更新"
                    android:textSize="@dimen/dimen_12sp" />

                <ImageView
                    android:id="@+id/activity_about_iv_checkupdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:src="@drawable/p2_arrow_right" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EDE6E6" />

            <RelativeLayout
                android:id="@+id/activity_about_rl_services"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_35dp"
                android:background="#FFFFFF" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:gravity="center"
                    android:text="服务条款"
                    android:textSize="@dimen/dimen_12sp" />

                <ImageView
                    android:id="@+id/activity_about_iv_services"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:src="@drawable/p2_arrow_right" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>