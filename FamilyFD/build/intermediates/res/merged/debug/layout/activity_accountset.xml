<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appback"
    android:orientation="vertical" >

    <TextView android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20dp"
        android:background="@color/statusbar_bg"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        android:background="@color/statusbar_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/accountset_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:src="@drawable/p2_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="账户设置"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dimen_18sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_6dp"
        android:background="@color/appback" />

    <RelativeLayout
        android:id="@+id/accountset_rl_phone"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="@dimen/dimen_35dp" >

        <TextView
            android:id="@+id/accountset_tv_phonezi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:gravity="center"
            android:text="手机号"
            android:textSize="@dimen/dimen_12sp" />
        
        <TextView
            android:id="@+id/accountset_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/accountset_tv_phonezi"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:gravity="center"
            android:text="18800000000"
            android:textSize="@dimen/dimen_12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:src="@drawable/p2_arrow_right" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="#EBE9E5" />

    <RelativeLayout
        android:id="@+id/accountset_rl_account"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="@dimen/dimen_35dp" >

        <TextView
            android:id="@+id/accountset_tv_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:gravity="center"
            android:text="账号"
            android:textSize="@dimen/dimen_12sp" />
        
        <TextView
            android:id="@+id/accountset_tv_account"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/accountset_tv_id"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:gravity="center"
            android:text="test"
            android:textSize="@dimen/dimen_12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:src="@drawable/p2_arrow_right" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#EBE9E5" />

    <RelativeLayout
        android:id="@+id/accountset_rl_mail"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="@dimen/dimen_35dp" >

        <TextView
            android:id="@+id/accountset_tv_mailzi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:gravity="center"
            android:text="邮箱"
            android:textSize="@dimen/dimen_12sp" />
        
        <TextView
            android:id="@+id/accountset_tv_mail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/accountset_tv_mailzi"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:gravity="center"
            android:text="1326565@qq.com"
            android:textSize="@dimen/dimen_12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:src="@drawable/p2_arrow_right" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#EBE9E5" />

   <RelativeLayout
       android:id="@+id/accountset_rl_identification"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="@dimen/dimen_35dp" >

        <TextView
            android:id="@+id/accountset_tv_identificationzi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:gravity="center"
            android:text="身份证号"
            android:textSize="@dimen/dimen_12sp" />
        
        <TextView
            android:id="@+id/accountset_tv_identification"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/accountset_tv_identificationzi"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:gravity="center"
            android:text="4306**********6235"
            android:textSize="@dimen/dimen_12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:src="@drawable/p2_arrow_right" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#EBE9E5" />

    <RelativeLayout
        android:id="@+id/accountset_rl_password"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="@dimen/dimen_35dp" >

        <TextView
            android:id="@+id/accountset_tv_changepassword"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:gravity="center"
            android:text="修改密码"
            android:textSize="@dimen/dimen_12sp" />
        

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:src="@drawable/p2_arrow_right" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#EBE9E5" />

</LinearLayout>